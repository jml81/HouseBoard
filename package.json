{
  "name": "houseboard",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && pnpm build:api",
    "preview": "vite preview",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,css}'",
    "build:api": "esbuild functions/_worker.ts --bundle --outfile=dist/_worker.js --format=esm --conditions=workerd,worker,browser",
    "dev:api": "pnpm build:api && wrangler pages dev dist --port=8788",
    "db:migrate": "wrangler d1 execute houseboard-db --local --file=db/schema.sql",
    "db:seed": "wrangler d1 execute houseboard-db --local --file=db/seed.sql",
    "db:migrate:remote": "wrangler d1 execute houseboard-db --remote --file=db/schema.sql",
    "db:seed:remote": "wrangler d1 execute houseboard-db --remote --file=db/seed.sql",
    "deploy:preview": "pnpm build && wrangler pages deploy dist --project-name=houseboard --branch=preview",
    "deploy:prod": "pnpm build && wrangler pages deploy dist --project-name=houseboard",
    "prepare": "husky"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-query": "^5.90.21",
    "@tanstack/react-router": "^1.160.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "hono": "^4.11.9",
    "i18next": "^25.8.10",
    "i18next-browser-languagedetector": "^8.2.1",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.564.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.4",
    "tailwind-merge": "^3.4.1",
    "tailwindcss": "^4.1.18",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260217.0",
    "@eslint/js": "^9.39.1",
    "@tanstack/router-devtools": "^1.160.0",
    "@tanstack/router-plugin": "^1.160.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  }
}
